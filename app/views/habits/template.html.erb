<%= render 'layouts/flash' %>
<br>
<%= form_with model: @habit, local: true do |f| %>
  <p><%= f.label("name") %></p>
  <p><%= f.text_field :name, :value => params['name'] %></p>
  <p><%= f.label("start_date") %></p>
  <p><%= f.date_select :start_date, include_blank: true, selected: Date.today  %></p>
  <p><%= f.label("note") %></p>
  <p><%= f.text_field("note") %></p>
  <p><%= f.label("time_period") %></p>
  <p><%= f.select :time_period, {'毎日': 1, '週毎': 2, '月毎': 3}, { class: 'form-control' , required: true } %></p>
  <p><%= f.submit %></p>
<% end %>
<br>
<p><%= link_to("習慣一覧に戻る", habits_path) %></p>
